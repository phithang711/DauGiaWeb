<title>Profile</title>
<div class="row w-100">
    <div class="col-sm-12 text-center">
        <h1>Profile</h1>
    </div>
    <div class="col-sm-2"><img src="../images/img_avatar.png"
            class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt=""></div>

    <div class="col-sm-8">
        <div class="form-group">
            <label for="">Name</label>
            <input type="text" class="form-control" disabled name="" id="" value="{{this.user.name}}">
        </div>
        <div class="form-group">
            <label for="">Email</label>
            <input type="text" class="form-control" disabled name="" id="" value="{{this.user.email}}">
        </div>
        <div class="form-group">
            <label for="">Phone</label>
            <input type="text" class="form-control" disabled name="" id="" value="{{this.user.phone}}">
        </div>
        <div class="form-group">
            <label for="">Date Of Birth</label>
            <input type="text" class="form-control" disabled name="" id="" value="{{this.user.dob}}">
        </div>
    </div>

    <div class="col-sm-2">
        <a name="" id="" class="btn btn-outline-primary w-100" href="/profile/changeProfile" role="button">
            <i class="fa fa-user" aria-hidden="true"></i>
            Change Profile
        </a>
        <br>
        <br>
        <a name="" id="" class="btn btn-outline-primary w-100" href="#" role="button">
            <i class="fa fa-question-circle-o" aria-hidden="true"></i>
            Contact
        </a>
        <br>
        <br>
        <button type="button" class="btn btn-outline-primary w-100">
            <i class="fa fa-heart" aria-hidden="true"></i>
            Favorite List
        </button>
        <br>
        <br>
        {{#if isBuyer}}
        <form id="frmToMerchant" action="/tomerchant" method="post">
        <button type="button" class="btn btn-outline-primary w-100" value="{{this.user.email}}" id="uptomerchant">
            <i class="fa fa-arrow-up" aria-hidden="true"></i>
            Become Merchant
        </button>
        </form>
        <br>
        <br>
        {{/if}}
        {{#if isMerchant}}
        <button type="button" class="btn btn-outline-primary w-100">
            <i class="fa fa-eye" aria-hidden="true"></i>
            View Uploaded
        </button>
        <br>
        <br>
        <button type="button" class="btn btn-outline-primary w-100">
            <i class="fa fa-upload" aria-hidden="true"></i>
            Upload Book
        </button>
        <br>
        <br>
        {{/if}}
        {{#if isAdmin}}
        <a type="button" class="btn btn-outline-primary w-100" href="/manage">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Account list
        </a>
        <br>
        <br>
        <a type="button" class="btn btn-outline-primary w-100" href="/manage/category">
            <i class="fa fa-eye" aria-hidden="true"></i>
            Manage account
        </a>
        <br>
        <br>
        <button type="button" class="btn btn-outline-primary w-100">
            <i class="fa fa-upload" aria-hidden="true"></i>
            Book list
        </button>
        <br><br>
        {{/if}}
        <button type="button" class="btn btn-outline-danger w-100">
            <i class="fa fa-key" aria-hidden="true"></i>
            Change Password
        </button>
        <br>
        <br>
    </div>
</div>


<script type="module">
    $('#uptomerchant').click(function (e) {
        $("#frmToMerchant").submit();
    });
</script>