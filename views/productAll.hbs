{{#if empty}}
<h4>No product found</h4>
{{else}}
<div style="width: 15%;margin-top:30px">
  <form action="/all">
    <div style="padding-left: 20px;font-size:14px">
      <span>Type:</span>
      <div class="radio" id="sortOrder">
        <label><input type="radio" name="type" value="phone" required>Phone</label>
      </div>
      <div class="radio">
        <label><input type="radio" value="laptop" name="type">Laptop</label>
      </div>
      <div class="radio">
        <label><input type="radio" value="all" name="type">All</label>
      </div>
    </div>
    <div class="dropdown-divider"></div>
    <div style="padding-left: 20px;font-size:14px">
      <span>Option:</span>
      <div class="radio" id="sortOption">
        <label><input type="radio" name="option" value="ending" required>Ending time</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="option" value="price">Top price</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="option" value="bid">Top bid</label>
      </div>
    </div>
    <div class="dropdown-divider"></div>
    <div style="padding-left: 20px;font-size:14px">
      <span>Order:</span>
      <div class="radio" id="sortOrder">
        <label><input type="radio" name="order" value="ascending" required>Ascending</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="order" value="descending">Descending</label>
      </div>
    </div>
    <button style="margin-left: 30px;margin-right: 30px;width: 50%;" class="btn btn-primary" type="submit">Sort</button>
</div>
</form>

{{> section item=this}}
<ul class="pagination" style="margin-right:auto;margin-left:70%">

  {{#compareEqual 1 @root.page}}
  <li class="page-item disabled">
    <a class="page-link page-previous" href="#" data-pagenum="{{@root.page}}">Previous</a>
  </li>
  {{/compareEqual}}
  {{#compareNotEqual 1 @root.page}}
  <li class="page-item page-previous"><a class="page-link" data-pagenum="{{@root.page}}">Previous</a></li>
  {{/compareNotEqual}}

  {{#for 1 totalPage 1}}
  {{#compareEqual this @root.page}}
  <li class="page-item active"><a class="page-link" data-pagenum="{{this}}">{{this}}</a></li>
  {{/compareEqual}}
  {{#compareNotEqual this @root.page}}
  <li class="page-item"><a class="page-link" data-pagenum="{{this}}">{{this}}</a></li>
  {{/compareNotEqual}}

  {{/for}}
  
  {{#compareEqualWithNum @root.totalPage @root.page}}
  <li class="page-item disabled">
    <a class="page-link page-next" data-pagenum="{{@root.page}}">Next</a>
  </li>
  {{/compareEqualWithNum}}
  {{#compareNotEqualWithNum @root.totalPage @root.page}}
  <li class="page-item">
    <a class="page-link page-next" data-pagenum="{{@root.page}}">Next</a>
  </li>
  {{/compareNotEqualWithNum}}
</ul>
<script src="js/section.js"></script>
<script src="js/productAll.js"></script>
{{/if}}