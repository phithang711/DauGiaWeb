<link rel="stylesheet" type="text/css" href="../../../css/SimpleStarRating.css">
<link rel="stylesheet" type="text/css" href="../../../css/rating.css">
<script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
<title>Review</title>
<div class="w-100">
  <h3>Review</h3>
  {{#if isEmpty}}
  <br><br>
  <h6>Don't have any review.</h6>
  {{/if}}
  {{#each items}}
  <div class="card col-sm-12 mt-4">
    <div class="row no-gutters">
      <div class="col-sm-2">
        <img src="../../../images/img_avatar.png" class="card-img" style="width: 200px; height: 200px;">
      </div>
      <div class="col-sm-10">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <span id="myRating1" class="rating card-title" data-stars="5" data-default-rating="{{rate}}" disabled></span>
          <p class="card-text">{{content}}</p>
          <p class="card-text"><small class="text-muted">{{time}}</small></p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script src="../../../js/SimpleStarRating.js"></script>
<script src="../../../js/rating.js"></script>